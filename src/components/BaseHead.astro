---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const { title = "Pink Pigeon", description = "A travel blog" } = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<title>{title}</title>
<meta name="description" content={description} />

<!-- Favicon -->
<link rel="icon" type="image/png" href="/favicon.png" />

<!-- Fonts -->
<link rel="preconnect" href="https://rsms.me/" />
<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />

<!-- Alpine.js -->
<script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

<!-- Netlify Identity Widget (for CMS login) -->
<script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
<script>
  if (window.netlifyIdentity) {
    // Point to Netlify site since we're hosted on Cloudflare
    window.netlifyIdentity.init({
      APIUrl: "https://pinkpigeonpink.netlify.app/.netlify/identity"
    });
    window.netlifyIdentity.on("init", user => {
      if (!user) {
        window.netlifyIdentity.on("login", () => {
          document.location.href = "/admin/";
        });
      }
    });
  }
</script>
