---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const { title = "Pink Pigeon", description = "A travel blog" } = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<title>{title}</title>
<meta name="description" content={description} />

<!-- Favicon -->
<link rel="icon" type="image/png" href="/favicon.png" />

<!-- Fonts -->
<link rel="preconnect" href="https://rsms.me/" />
<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />

<!-- Alpine.js -->
<script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

<!-- Netlify Identity Widget (for CMS login) -->
<script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
<script>
  // Wait for widget to be ready
  if (window.netlifyIdentity) {
    window.netlifyIdentity.on('init', function(user) {
      // Check for tokens in URL hash
      const hash = window.location.hash;
      
      if (hash.includes('recovery_token=')) {
        window.netlifyIdentity.open('recover');
      } else if (hash.includes('invite_token=')) {
        window.netlifyIdentity.open('signup');  
      } else if (hash.includes('confirmation_token=')) {
        window.netlifyIdentity.open();
      }
    });
    
    // Redirect to admin after login
    window.netlifyIdentity.on('login', function() {
      document.location.href = '/admin/';
    });
  }
</script>
