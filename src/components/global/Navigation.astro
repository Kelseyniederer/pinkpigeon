---
const pathname = Astro.url.pathname;
const isBlog = pathname === "/" || pathname.startsWith("/posts") || pathname.startsWith("/tags");
const isAbout = pathname.startsWith("/about");
const activeKey = isAbout ? "about" : "blog";
---

<header class="pt-6 pb-8">
  <!-- Top bar: socials (left) + theme toggle (right) -->
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-2">
      <a
        href="https://instagram.com"
        target="_blank"
        rel="noreferrer"
        class="inline-flex items-center justify-center w-9 h-9 rounded-full text-base-500 dark:text-base-400 hover:text-[var(--color-accent)] hover:bg-base-100 dark:hover:bg-base-900 transition"
        aria-label="Instagram"
        title="Instagram"
      >
        <svg viewBox="0 0 24 24" class="w-5 h-5" fill="currentColor">
          <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
        </svg>
      </a>
    </div>

    <!-- Dark mode toggle -->
    <button
      x-data="{ darkMode: localStorage.getItem('dark') === 'true' }"
      x-init="$watch('darkMode', val => { localStorage.setItem('dark', val); document.documentElement.classList.toggle('dark', val) }); document.documentElement.classList.toggle('dark', darkMode)"
      @click="darkMode = !darkMode"
      class="inline-flex items-center justify-center w-9 h-9 rounded-full hover:bg-base-100 dark:hover:bg-base-900 transition"
      aria-label="Toggle dark mode"
      title="Toggle dark mode"
    >
      <!-- Sun icon (show in dark mode, click to go light) -->
      <svg
        x-cloak
        x-show="darkMode"
        class="w-5 h-5 text-base-500 dark:text-base-400"
        fill="currentColor"
        viewBox="0 0 20 20"
      >
        <path
          fill-rule="evenodd"
          d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
          clip-rule="evenodd"
        />
      </svg>
      <!-- Moon icon (show in light mode, click to go dark) -->
      <svg
        x-cloak
        x-show="!darkMode"
        class="w-5 h-5 text-base-500 dark:text-base-400"
        fill="currentColor"
        viewBox="0 0 20 20"
      >
        <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
      </svg>
    </button>
  </div>

  <!-- Title -->
  <div class="mt-10 text-center">
    <a
      href="/"
      class="inline-flex items-center justify-center transition hover:opacity-90"
      aria-label="Pink Pigeon home"
    >
      <img
        src="/logo.png"
        alt="Pink Pigeon"
        class="h-16 sm:h-20 md:h-24 w-auto"
        loading="eager"
        decoding="async"
      />
    </a>
  </div>

  <!-- Nav links -->
  <nav
    class="mt-5 flex items-center justify-center"
    x-data={`{
      active: "${activeKey}",
      left: 0,
      width: 0,
      setIndicator(el) {
        if (!el) return;
        // Measure relative to the same element the indicator is positioned within
        const navRect = this.$refs.wrap.getBoundingClientRect();
        const rect = el.getBoundingClientRect();
        this.left = rect.left - navRect.left;
        this.width = rect.width;
      },
      reset() {
        this.$nextTick(() => this.setIndicator(this.$refs[this.active]));
      },
      init() {
        this.reset();
        window.addEventListener('resize', () => this.reset(), { passive: true });
      }
    }`}
    x-init="init()"
    @mouseleave="reset()"
  >
    <div x-ref="wrap" class="relative inline-flex items-center gap-6 text-sm">
      <!-- sliding indicator -->
      <span
        aria-hidden="true"
        class="absolute left-0 -bottom-1 h-[2px] rounded-full bg-[var(--color-accent)] transition-[left,width] duration-300 ease-out"
        :style="`left:${left}px;width:${width}px`"
      ></span>
    <a
      x-ref="blog"
      @mouseenter="setIndicator($el)"
      @focus="setIndicator($el)"
      class:list={[
        "relative text-base-600 dark:text-base-400 hover:text-[var(--color-accent)] transition",
        isBlog && "text-base-900 dark:text-base-100",
      ]}
      href="/"
    >
      Blog
    </a>
    <a
      x-ref="about"
      @mouseenter="setIndicator($el)"
      @focus="setIndicator($el)"
      class:list={[
        "relative text-base-600 dark:text-base-400 hover:text-[var(--color-accent)] transition",
        isAbout && "text-base-900 dark:text-base-100",
      ]}
      href="/about"
    >
      About
    </a>
    </div>
  </nav>
</header>
