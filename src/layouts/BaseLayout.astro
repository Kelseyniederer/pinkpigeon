---
import BaseHead from "@/components/BaseHead.astro";
import Navigation from "@/components/global/Navigation.astro";
import Footer from "@/components/global/Footer.astro";
---

<html lang="en">
  <head>
    <BaseHead />
    <script is:inline>
      // Check for dark mode preference on page load
      if (localStorage.getItem('dark') === 'true') {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="flex flex-col w-full max-w-[clamp(44rem,calc(100vw/1.618),72rem)] min-h-screen px-6 sm:px-8 lg:px-10 mx-auto bg-base-50 dark:bg-base-950 text-base-900 dark:text-base-100 transition-colors duration-300">
    <Navigation />
    <main class="flex-grow"><slot /></main>
    <Footer />
  </body>
</html>
