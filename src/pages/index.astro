---
import BaseLayout from "@/layouts/BaseLayout.astro";
import BlogEntries from "@/components/entries/BlogEntry.astro";
import Cta from "@/components/global/Cta.astro";
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
const tags = [
  ...new Set(allPosts.flatMap((post) => post.data.tags ?? []).filter(Boolean)),
];
// Sort posts by date in descending order (newest first)
const sortedPosts = allPosts.sort(
  (a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate)
);
---

<BaseLayout>
  <section>
    <div class="pt-10 pb-24">
      <h1
        class="text-4xl text-balance font-medium font-display text-base-900 dark:text-base-100 max-w-xl"
      >
       Blog
      </h1>
      <div class="flex flex-wrap gap-3 mt-8">
        {
          tags.map((tag) => (
            <a
              class="hover:text-[var(--color-accent)] text-xs font-medium text-base-600 dark:text-base-400"
              href={`/tags/${tag}`}
            >
              {tag}
            </a>
          ))
        }
      </div>
      <div class="grid grid-cols-1 mt-8 gap-8 gap-y-24 sm:grid-cols-2 lg:grid-cols-3">
        {
          sortedPosts.map((post, idx) => (
            <BlogEntries
              url={"/posts/" + post.slug}
              alt={post.data.title}
              tags={post.data.tags}
              title={post.data.title}
              author={post.data.author}
              image={post.data.image.url}
              description={post.data.description}
              pubDate={post.data.pubDate.toString().slice(0, 10)}
              featured={idx === 0}
            />
          ))
        }
      </div>
    </div>
  </section>
  <Cta />
</BaseLayout>
