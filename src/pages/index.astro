---
import BaseLayout from "@/layouts/BaseLayout.astro";
import BlogEntries from "@/components/entries/BlogEntry.astro";
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
const tags = [
  ...new Set(allPosts.flatMap((post) => post.data.tags ?? []).filter(Boolean)),
];
// Sort posts by date in descending order (newest first)
const sortedPosts = allPosts.sort(
  (a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate)
);
---

<BaseLayout>
  <section>
    <div class="pt-4 pb-24" x-data="{ selectedTag: '' }">
      <div class="flex flex-wrap gap-3 mt-2 items-center">
        <button
          type="button"
          @click="selectedTag = ''"
          class="text-xs font-medium transition"
          :class="selectedTag === '' ? 'text-[var(--color-accent)]' : 'text-base-600 dark:text-base-400 hover:text-[var(--color-accent)]'"
        >
          All
        </button>
        {
          tags.map((tag) => (
            <button
              type="button"
              class="text-xs font-medium transition"
              x-on:click={`selectedTag = (selectedTag === ${JSON.stringify(tag)} ? '' : ${JSON.stringify(tag)})`}
              x-bind:class={`selectedTag === ${JSON.stringify(tag)} ? 'text-[var(--color-accent)]' : 'text-base-600 dark:text-base-400 hover:text-[var(--color-accent)]'`}
            >
              {tag}
            </button>
          ))
        }
      </div>
      <div class="grid grid-cols-1 mt-8 gap-8 gap-y-24 sm:grid-cols-2 lg:grid-cols-3">
        {
          sortedPosts.map((post, idx) => (
            <BlogEntries
              url={"/posts/" + post.slug}
              alt={post.data.title}
              tags={post.data.tags}
              title={post.data.title}
              author={post.data.author}
              image={post.data.image.url}
              description={post.data.description}
              pubDate={post.data.pubDate.toString().slice(0, 10)}
              featured={idx === 0}
            />
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>
